<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <LinearLayout
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <com.facebook.drawee.view.SimpleDraweeView
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:id="@+id/pic_activity_dymaic_details_head"
              android:layout_width="50dp"
              android:layout_height="50dp"
              fresco:actualImageScaleType="centerInside"/>
          <TextView
              android:id="@+id/nikename_activity_dymaic_details_head"
              android:layout_marginLeft="10dp"
              android:singleLine="true"
              android:textColor="@color/black"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
      </LinearLayout>
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/content_activity_dymaic_details_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:maxLength="50"/>

        <com.blankj.utilcode.customwidget.GridView.InnerGridView
            android:visibility="visible"
            android:id="@+id/nine_view_activity_dymaic_details_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:horizontalSpacing="3dp"
            android:numColumns="3"
            android:verticalSpacing="3dp">

        </com.blankj.utilcode.customwidget.GridView.InnerGridView>

        <TextView
            android:id="@+id/loaction_view_activity_dymaic_details_head"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/time_activity_dymaic_details_head"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"/>

            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/praise_activity_dymaic_details_head"
                android:layout_width="20dp"
                android:layout_height="20dp"
                fresco:placeholderImage="@mipmap/logo_praise_no"
                fresco:actualImageScaleType="centerCrop"/>

            <TextView
                android:id="@+id/praise_number_activity_dymaic_details_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_weight="0.18"/>
            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/comment_activity_dymaic_details_head"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                fresco:placeholderImage="@mipmap/logo_comment"
                fresco:actualImageScaleType="centerCrop"/>
            <TextView
                android:id="@+id/comment_number_activity_dymaic_details_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_weight="0.2"/>
            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/share_activity_dymaic_details_head"
                android:layout_width="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="20dp"
                fresco:placeholderImage="@mipmap/logo_dymaic_share"
                fresco:actualImageScaleType="centerCrop"/>
            <TextView
                android:id="@+id/share_number_activity_dymaic_details_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_weight="0.2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/prise_parent_activity_dymaic_details_head"
            android:gravity="center"
            android:background="@color/line"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="30dp"
                fresco:placeholderImage="@mipmap/logo_praise_yes"
                fresco:placeholderImageScaleType="fitCenter"/>
            <com.blankj.utilcode.customwidget.ListView.HorizontalListView
                android:id="@+id/horizontalListView_activity_dymaic_details_head"
                android:layout_width="match_parent"
                android:layout_height="30dp"></com.blankj.utilcode.customwidget.ListView.HorizontalListView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_find_password"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/top_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手机号    "
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/mobile_activity_find_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入注册手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="13.8sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="密保信息"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/protect_activity_find_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入预留密码保护信息"
            android:maxLength="11"
            android:textSize="13.8sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登录密码"
            android:textColor="#333333"
            android:id="@+id/text"/>

        <EditText

            android:background="@null"
            android:id="@+id/password_one_activity_find_password_set_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:maxLength="18"
            android:gravity="center_vertical"
            android:hint="请设置您的新密码"
            android:inputType="textPassword"
            android:textSize="13.8sp"/>
        <com.sss.car.custom.HideShowButton
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/eyes_one"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            fresco:placeholderImage="@mipmap/logo_eyes_close"
            fresco:placeholderImageScaleType="fitXY"
            fresco:roundAsCircle="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确认密码"
            android:textColor="#333333"/>

        <EditText
            android:background="@null"
            android:id="@+id/password_two_activity_find_password_set_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:maxLength="18"
            android:gravity="center_vertical"
            android:hint="请确认您的新密码"
            android:inputType="textPassword"
            android:textSize="13.8sp"/>
        <com.sss.car.custom.HideShowButton
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/eyes_two"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            fresco:placeholderImage="@mipmap/logo_eyes_close"
            fresco:placeholderImageScaleType="fitXY"
            fresco:roundAsCircle="true"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#cccccc"
        android:gravity="center"
        android:text="新密码由6-18位数字和字母组成"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/next_activity_find_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:text="确认"
            android:textSize="15sp"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/account_complaint_activity_find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号申诉"
            android:textColor="@color/mainColor"/>
    </LinearLayout>
</LinearLayout>

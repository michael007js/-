<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_my_data_adress_add_and_edit_adress_public"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/top_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="收  货  人"/>

        <EditText
            android:hint="请填写收货人"
            android:textColorHint="#ccc"
            android:id="@+id/receiving_activity_my_data_adress_add_and_edit_adress_public"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="联系电话"/>

        <EditText
            android:textColorHint="#ccc"
            android:hint="请填写联系电话"
            android:maxLength="11"
            android:id="@+id/mobile_activity_my_data_adress_add_and_edit_adress_public"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:inputType="phone"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/administrative_region_activity_my_data_adress_add_and_edit_adress_public"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="省  市  区"/>

        <TextView
            android:id="@+id/administrative_region_activity_my_data_adress_show_add_and_edit_adress_public"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:maxLines="1"
            android:text="请选择"
            android:textColor="#ccc"/>


    </LinearLayout>

    <EditText
        android:id="@+id/adress_activity_my_data_adress_add_and_edit_adress_public"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="top"
        android:hint="请填写详细地址,不少于5个字"
        android:padding="10dp"
        android:textColorHint="#ccc"
        android:textSize="14sp"/>


    <LinearLayout
        android:id="@+id/default_activity_my_data_adress_add_and_edit_adress_public"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:text="设为默认"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Switch
            android:id="@+id/set_activity_my_data_adress_add_and_edit_adress_public"
            android:layout_width="80dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete_activity_my_data_adress_add_and_edit_adress_public"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:textColor="@color/mainColor"
            android:text="删除信息"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>

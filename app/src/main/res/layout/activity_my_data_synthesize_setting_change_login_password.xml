<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:id="@+id/activity_my_data_synthesize_setting_change_login_password"
              android:layout_height="match_parent">

    <include layout="@layout/top_main"/>

    <LinearLayout
    android:layout_marginTop="10dp"
        android:background="#fff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:text="原密码:    "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/oid_password"
            android:background="@null"
            android:textSize="13.8sp"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:hint="请输入原密码"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:text="新密码:    "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/new_one_password"
            android:background="@null"
            android:textSize="13.8sp"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:hint="请输入新密码"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:text="重复密码:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/new_two_password"
            android:background="@null"
            android:textSize="13.8sp"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:hint="请确认新密码"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/sure"
        android:background="@drawable/bg_button_small_ra"
        android:textColor="#fff"
        android:text="确定"
        android:gravity="center"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</LinearLayout>

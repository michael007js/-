<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_my_data_synthesize_setting_do_not"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/top_main"/>

    <TextView
        android:textColor="@color/grayness"
        android:text="勿扰时段启用后,消息提醒将会被设为静音"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="设定时间"/>

        <com.blankj.utilcode.customwidget.SwitchButton.SwitchButton
            android:id="@+id/switch_time"
            android:layout_width="100dp"
            android:layout_height="30dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/click_"
        android:background="#fff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <TextView
               android:id="@+id/from_"
               android:text="从"
               android:padding="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/to_"
               android:background="#fff"
               android:layout_marginTop="1dp"
               android:text="至"
               android:padding="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

       </LinearLayout>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/right_arrows"/>
    </LinearLayout>
</LinearLayout>

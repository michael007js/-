<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_order_choose_time"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/top_main"/>

    <LinearLayout
    android:layout_marginTop="10dp"
    android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">
        <TextView
            android:text="预约时间:"

            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/show_activity_order_choose_time"
            android:gravity="center_vertical"
            android:text=""
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <TextView
        android:id="@+id/from_activity_order_choose_time"
        android:background="#fff"
        android:layout_marginTop="100dp"
        android:textColor="@color/mainColor"
        android:text="从0000-00-00"
        android:gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/to_activity_order_choose_time"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:textColor="@color/mainColor"
        android:text="至0000-00-00"
        android:gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/activity_order_comment_seller"
              android:orientation="vertical"
              android:layout_height="match_parent">
<include layout="@layout/top_main"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pic_activity_order_comment_seller"
            android:layout_width="25dp"
            android:layout_height="25dp"
            fresco:actualImageScaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="总分"/>
        <com.azhong.ratingbar.RatingBar
            android:id="@+id/startbar_activity_order_comment_seller"
            xmlns:a_zhon="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            a_zhon:clickable="true"
            a_zhon:image_height="30dp"
            a_zhon:image_padding="3dp"
            a_zhon:image_width="30dp"
            a_zhon:star="0"
            a_zhon:star_count="5"
            a_zhon:star_img="@mipmap/logo_star_light"
            a_zhon:unstar_img="@mipmap/logo_star_dark" />

        <TextView
            android:id="@+id/state_activity_order_comment_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text=""/>
    </LinearLayout>

    <EditText
        android:id="@+id/input_activity_order_comment_seller"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="top"
        android:hint="请对交易对象评价"
        android:padding="10dp"
        android:textSize="13sp"/>
    
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/activity_people"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <include layout="@layout/top_main"/>

    <LinearLayout
        android:id="@+id/name_activity_people"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="1"
            android:text="真实姓名"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/show_user_name_activity_people"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/right_arrows"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_card_activity_people"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="1"
            android:text="身份证号"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/show_id_card_activity_people"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/right_arrows"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_activity_people"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="1"
            android:text="身份证正面照"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/right_arrows"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/back_activity_people"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="1"
            android:text="身份证反面照"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/right_arrows"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hold_activity_people"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="1"
            android:text="手持身份证照"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/right_arrows"/>
    </LinearLayout>

</LinearLayout>

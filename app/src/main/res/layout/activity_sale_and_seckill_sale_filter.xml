<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_sale_and_seckill_sale_filter"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/top_main"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="#fff"
            android:background="@color/mainColor"
            android:id="@+id/hot_activity_sale_and_seckill_sale_filter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="热卖榜单\n已开抢"/>

        <TextView
            android:textColor="#fff"
            android:background="@color/black_dark"
            android:id="@+id/ing_activity_sale_and_seckill_sale_filter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="抢购进行中"/>

        <TextView
            android:textColor="#fff"
            android:background="@color/black_dark"
            android:id="@+id/will_activity_sale_and_seckill_sale_filter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="即将开抢"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/parent_activity_sale_and_seckill_sale_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/title_share_post_details_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/click_collect_share_post_details_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/collect_show"
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    fresco:placeholderImage="@mipmap/logo_collect"
                    fresco:placeholderImageScaleType="centerCrop"/>

                <TextView
                    android:id="@+id/number_collect_share_post_details_head"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:text="0"/>

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="人收藏"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/click_comment_share_post_details_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    fresco:placeholderImage="@mipmap/logo_comment_posts"
                    fresco:placeholderImageScaleType="centerCrop"/>

                <TextView
                    android:id="@+id/number_comment_share_post_details_head"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="人评论"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/click_share_share_post_details_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    fresco:placeholderImage="@mipmap/logo_share"
                    fresco:placeholderImageScaleType="centerCrop"/>

                <TextView
                    android:id="@+id/number_share_share_post_details_head"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:text="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="人分享"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pic_share_post_details_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                fresco:actualImageScaleType="centerInside"/>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/nikename_share_post_details_head"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:maxWidth="150dp"
                        android:singleLine="true"/>


                    <TextView
                        android:id="@+id/car_name_share_post_details_head"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:maxWidth="150dp"
                        android:singleLine="true"
                        android:textColor="#999999"/>





                </LinearLayout>



                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_name_share_post_details_head"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:textSize="13sp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="#999999"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:id="@+id/type_name_share_post_details_head"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/mainColor"
                        android:gravity="center_vertical|right"/>
                    <com.facebook.drawee.view.SimpleDraweeView
                        xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        fresco:placeholderImage="@mipmap/right_arrows"
                        fresco:placeholderImageScaleType="centerInside"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>




       <com.blankj.utilcode.xrichtext.RichTextView
           android:id="@+id/content_share_post_details_head"
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

       </com.blankj.utilcode.xrichtext.RichTextView>
        <TextView
            android:visibility="gone"
            android:id="@+id/delete"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/mainColor"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>

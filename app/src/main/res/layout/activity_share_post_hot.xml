<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/activity_share_post_hot"
              android:orientation="vertical"
              android:layout_height="match_parent">
   <FrameLayout
       android:background="#ffffff"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:id="@+id/title_top"
          android:textColor="@color/black"
          android:textSize="18sp"
          android:gravity="center"/>
      <LinearLayout
          android:id="@+id/top_parent"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

         <LinearLayout
             android:id="@+id/back_top"
             android:layout_width="60dp"
             android:layout_height="50dp"
             android:gravity="center"
             android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@mipmap/logo_back"/>
         </LinearLayout>
         <TextView
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>
        <LinearLayout
            android:visibility="invisible"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
           <com.facebook.drawee.view.SimpleDraweeView
               android:id="@+id/collect"
               xmlns:fresco="http://schemas.android.com/apk/res-auto"
               android:layout_width="20dp"
               android:layout_height="20dp"
               fresco:placeholderImage="@mipmap/logo_collect_no"
               fresco:placeholderImageScaleType="centerCrop"/>

           <TextView
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>

           <com.facebook.drawee.view.SimpleDraweeView
               android:id="@+id/share"
               xmlns:fresco="http://schemas.android.com/apk/res-auto"
               android:layout_width="20dp"
               android:layout_height="20dp"
               fresco:placeholderImage="@mipmap/logo_share"
               fresco:placeholderImageScaleType="centerCrop"/>
        </LinearLayout>
      </LinearLayout>


   </FrameLayout>


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">



      <FrameLayout
          android:layout_marginTop="1dp"
          android:id="@+id/parent_activity_share_post_hot"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

      </FrameLayout>
      <ImageView

          android:background="@color/line"
          android:id="@+id/top_activity_share_post_hot"
          android:layout_width="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginBottom="30dp"
          android:layout_height="30dp"
          android:visibility="gone"
          android:layout_alignParentBottom="true"
          android:layout_alignParentRight="true"
          android:src="@mipmap/logo_top"
          android:scaleType="centerInside"/>
   </RelativeLayout>
</LinearLayout>

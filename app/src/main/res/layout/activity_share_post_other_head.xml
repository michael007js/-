<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:background="#fff"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/mainColor"
                android:id="@+id/all_activity_share_post_other_head"
                android:text="全部"

                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/essence_activity_share_post_other_head"
                android:text="精华帖"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:paddingRight="10dp"
                android:id="@+id/last_open_activity_share_post_other_head"
                android:text="最新发布"
                android:gravity="center|right"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <TextView
            android:visibility="visible"
            android:id="@+id/last_activity_share_post_other_head"
            android:paddingLeft="10dp"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:textColor="@color/black"
            android:text="最后回复"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/new_activity_share_post_other_head"
            android:paddingLeft="10dp"
            android:background="#fff"
            android:layout_marginTop="1dp"
            android:textColor="@color/black"
            android:text="最新发布"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <LinearLayout
            android:id="@+id/parent_posted_activity_share_post_other_head"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/logo_posted"/>
            <TextView
                android:id="@+id/posted_activity_share_post_other_head"
                android:textColor="@color/mainColor"
                android:text="立即发帖"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

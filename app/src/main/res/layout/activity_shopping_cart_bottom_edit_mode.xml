<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="40dp"
        android:id="@+id/parent_choose_activity_shopping_cart_bottom_edit_mode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/line"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <TextView
            android:text="合计:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:text="¥"
            android:textColor="@color/mainColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/total_price_choose_activity_shopping_cart_bottom_edit_mode"
            android:textColor="@color/mainColor"
            android:layout_width="wrap_content"
            android:text="0.00"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ready_buy_choose_activity_shopping_cart_bottom_edit_mode"
            android:background="@color/mainColor"
            android:textColor="#fff"
            android:text="去预购"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>

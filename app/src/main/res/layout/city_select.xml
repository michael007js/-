<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <TextView
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:background="#fff"
          android:paddingLeft="10dp"
          android:paddingRight="20dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <TextView
              android:textColor="@color/black"
              android:visibility="gone"
              android:id="@+id/title_current_city_select"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="1dp"
              android:padding="10dp"
              android:text="当前定位城市"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textColor="@color/black"
               android:visibility="gone"
               android:id="@+id/current_city_select"
               android:background="@color/line"
               android:padding="10dp"
               android:layout_margin="10dp"
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
           </TextView>
       </LinearLayout>


          <TextView
              android:textColor="@color/black"
              android:visibility="gone"
              android:id="@+id/title_recently_city_select"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="1dp"
              android:padding="10dp"
              android:text="最近选择城市"/>
          <TextView
              android:background="@color/line"
              android:layout_width="match_parent"
              android:layout_height="1dp"/>
          <com.blankj.utilcode.customwidget.GridView.InnerGridView
              android:visibility="gone"
              android:layout_margin="10dp"
              android:id="@+id/recently_city_select"
              android:layout_width="match_parent"
              android:numColumns="3"
              android:verticalSpacing="10dp"
              android:horizontalSpacing="10dp"
              android:layout_height="wrap_content">

          </com.blankj.utilcode.customwidget.GridView.InnerGridView>

          <TextView
              android:textColor="@color/black"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="1dp"
              android:padding="10dp"
              android:text="国内热门城市"/>
          <TextView
              android:background="@color/line"
              android:layout_width="match_parent"
              android:layout_height="1dp"/>
          <com.blankj.utilcode.customwidget.GridView.InnerGridView
              android:layout_margin="10dp"
              android:id="@+id/hot_city_select"
              android:layout_width="match_parent"
              android:numColumns="3"
              android:verticalSpacing="10dp"
              android:horizontalSpacing="10dp"
              android:layout_height="wrap_content">

          </com.blankj.utilcode.customwidget.GridView.InnerGridView>
      </LinearLayout>
  </ScrollView>
</LinearLayout>

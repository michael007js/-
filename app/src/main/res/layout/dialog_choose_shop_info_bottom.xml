<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="110dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:singleLine="true"
                        android:id="@+id/title_dialog_choose_shop_info_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/close_dialog_choose_shop_info_bottom"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/logo_close"/>
                </LinearLayout>


              <LinearLayout
                  android:layout_marginTop="5dp"
                  android:gravity="center_vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:id="@+id/m_dialog_choose_shop_info_bottom"
                      android:textColor="@color/mainColor"
                        android:text="¥"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"/>
                  <TextView
                      android:text="0"
                      android:textColor="@color/mainColor"
                      android:id="@+id/price_dialog_choose_shop_info_bottom"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="center_vertical"/>
              </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:background="#fff">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/pic_dialog_choose_shop_info_bottom"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"/>

            </FrameLayout>


        </FrameLayout>


        <ScrollView
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line"/>

                <com.sss.car.custom.ChooseType
                    android:layout_marginTop="5dp"

                    android:id="@+id/choose_type_dialog_choose_shop_info_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.sss.car.custom.ChooseType>


            </LinearLayout>
        </ScrollView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
           android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="购买数量"/>

            <com.blankj.utilcode.customwidget.EditText.NumberSelectEdit
                android:id="@+id/numberSelectEdit_dialog_choose_shop_info_bottom"
                android:layout_width="wrap_content"
                android:layout_height="40dp"></com.blankj.utilcode.customwidget.EditText.NumberSelectEdit>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/add_dialog_choose_shop_info_bottom"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="加入购物车"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#ff8f51"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/subscribe_dialog_choose_shop_info_bottom"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="立即预购"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@color/mainColor"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/save_dialog_choose_shop_info_bottom"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="保存"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@color/mainColor"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

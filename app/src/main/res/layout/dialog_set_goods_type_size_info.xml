<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/bg_dialog"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textSize="13sp"
android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="批量设定价格/库存"/>
     <LinearLayout
         android:background="@drawable/bg_disselect_textview"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginRight="30dp"
         android:layout_marginLeft="30dp">
         <EditText
             android:background="@null"
             android:textSize="13sp"
             android:hint="统一输入价格"
             android:id="@+id/price_dialog_set_goods_type_size_info"
             android:layout_width="match_parent"
             android:digits="0123456789"
             android:inputType="number"
             android:layout_height="40dp"
             android:gravity="center"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/dialog_line_gray" />
         <EditText
             android:background="@null"
             android:textSize="13sp"
             android:digits="0123456789"
             android:inputType="number"
             android:hint="统一输入库存"
             android:id="@+id/number_dialog_set_goods_type_size_info"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:gravity="center"/>
     </LinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dialog_line_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textColor="#727272"
                android:id="@+id/cancel_dialog_set_goods_type_size_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="取消" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dialog_line_gray" />
            <TextView
                android:textColor="#727272"
                android:id="@+id/yes_dialog_set_goods_type_size_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="确定" />


            <TextView
                android:layout_width="1dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

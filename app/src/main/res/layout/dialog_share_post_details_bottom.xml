<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

   <LinearLayout
       android:background="#fff"
       android:id="@+id/parent_userinfo_dialog_share_post_details_bottom"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:id="@+id/click_userinfo_dialog_share_post_details_bottom"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:background="#fff"
           android:gravity="center"
           android:orientation="horizontal"
           android:paddingLeft="10dp"
           android:paddingRight="10dp">

           <TextView
               android:textColor="@color/black"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center_vertical"
               android:text="作者主页"/>

           <com.facebook.drawee.view.SimpleDraweeView
               xmlns:fresco="http://schemas.android.com/apk/res-auto"
               android:layout_width="20dp"
               android:layout_height="match_parent"
               fresco:placeholderImage="@mipmap/right_arrows"
               fresco:placeholderImageScaleType="centerInside"/>
       </LinearLayout>
       <TextView
           android:background="@color/line"
           android:layout_width="match_parent"
           android:layout_height="1dp"/>
       <LinearLayout
           android:id="@+id/click_report_dialog_share_post_details_bottom"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_marginTop="1dp"
           android:background="#fff"
           android:gravity="center"
           android:orientation="horizontal"
           android:paddingLeft="10dp"
           android:paddingRight="10dp">

           <TextView
               android:textColor="@color/black"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center_vertical"
               android:text="举报"/>

           <com.facebook.drawee.view.SimpleDraweeView
               xmlns:fresco="http://schemas.android.com/apk/res-auto"
               android:layout_width="20dp"
               android:layout_height="match_parent"
               fresco:placeholderImage="@mipmap/right_arrows"
               fresco:placeholderImageScaleType="centerInside"/>
       </LinearLayout>
       <TextView
           android:background="@color/line"
           android:layout_width="match_parent"
           android:layout_height="1dp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_marginTop="1dp"
           android:background="#fff"
           android:gravity="center"
           android:orientation="horizontal"
           android:paddingLeft="10dp"
           android:paddingRight="10dp">

           <TextView
               android:textColor="@color/black"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center_vertical"
               android:text="文章/帖子小图模式"/>
           <Switch
               android:layout_width="80dp"
               android:layout_height="30dp"
               android:id="@+id/small_dialog_share_post_details_bottom"/>
       </LinearLayout>
       <TextView
           android:background="@color/line"
           android:layout_width="match_parent"
           android:layout_height="1dp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_marginTop="1dp"
           android:background="#fff"
           android:gravity="center"
           android:orientation="horizontal"
           android:paddingLeft="10dp"
           android:paddingRight="10dp">

           <TextView
               android:textColor="@color/black"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center_vertical"
               android:text="夜间模式"/>
           <Switch
               android:layout_width="80dp"
               android:layout_height="30dp"
               android:id="@+id/night_dialog_share_post_details_bottom"/>
       </LinearLayout>

<TextView
    android:background="@color/line"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
       <LinearLayout

           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:background="#fff"
           android:gravity="center"
           android:orientation="horizontal"
           android:paddingLeft="10dp"
           android:paddingRight="10dp">

           <TextView
               android:textColor="@color/black"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center_vertical"
               android:text="字号大小"
               android:id="@+id/textView14"/>

           <LinearLayout
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="match_parent">

               <TextView
                   android:id="@+id/text_small_dialog_share_post_details_bottom"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:gravity="center"
                   android:text="小"/>

               <TextView
                   android:id="@+id/text_middle_dialog_share_post_details_bottom"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:background="@drawable/bg_bottom_dialog_text"
                   android:gravity="center"
                   android:text="中"
                   android:textColor="#fff"/>

               <TextView
                   android:id="@+id/text_big_dialog_share_post_details_bottom"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:gravity="center"
                   android:text="大"/>
           </LinearLayout>
       </LinearLayout>




       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:background="@color/mainColor"
           android:gravity="center"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/cancel_big_dialog_share_post_details_bottom"
               android:textSize="15sp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:textColor="#fff"
               android:text="取消"/>

       </LinearLayout>
   </LinearLayout>
</LinearLayout>

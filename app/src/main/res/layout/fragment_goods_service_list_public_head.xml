<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <com.blankj.utilcode.customwidget.ViewPager.BannerVariation
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="190dp">

    </com.blankj.utilcode.customwidget.ViewPager.BannerVariation>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/click_one"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_one"
                android:layout_weight="1"
                android:textColor="@color/mainColor"
                android:text="综合"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/click_two"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/text_two"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="人气"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_two"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="10dp"
                android:layout_height="10dp"
                fresco:placeholderImage="@mipmap/arrows_down_no"
                fresco:placeholderImageScaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/click_three"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/text_three"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="价格"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_three"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="10dp"
                android:layout_height="10dp"
                fresco:placeholderImage="@mipmap/arrows_down_no"
                fresco:placeholderImageScaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/click_four"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/text_four"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="收藏"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_four"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="10dp"
                android:layout_height="10dp"
                fresco:placeholderImage="@mipmap/arrows_down_no"
                fresco:placeholderImageScaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/click_five"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_five"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="距离"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_five"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="10dp"
                android:layout_height="10dp"
                fresco:placeholderImage="@mipmap/arrows_down_no"
                fresco:placeholderImageScaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/click_six"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_six"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="信誉"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_six"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="10dp"
                android:layout_height="10dp"
                fresco:placeholderImage="@mipmap/arrows_down_no"
                fresco:placeholderImageScaleType="fitXY"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

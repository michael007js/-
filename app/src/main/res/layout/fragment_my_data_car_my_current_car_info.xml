<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="40dp"
        android:background="@color/mainColor"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/bg_my_data_car_my_current_car_info_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          android:padding="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/car_logo_fragment_my_data_car_my_current_car_info"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/car_name_fragment_my_data_car_my_current_car_info"
                    android:gravity="bottom"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/car_type_fragment_my_data_car_my_current_car_info"
                    android:layout_marginTop="5dp"
                    android:gravity="top"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="车辆基本信息"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


    <LinearLayout
        android:id="@+id/displacement_fragment_my_data_car_my_current_car_info"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:text="发动机排量"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/displacement_show_fragment_my_data_car_my_current_car_info"
            android:gravity="center|right"
            android:layout_weight="1"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/right_arrows"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/year_fragment_my_data_car_my_current_car_info"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:text="生产年份"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/year_show_fragment_my_data_car_my_current_car_info"
            android:gravity="center|right"
            android:layout_weight="1"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/right_arrows"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/type_fragment_my_data_car_my_current_car_info"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:text="车款"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/type_show_fragment_my_data_car_my_current_car_info"
            android:gravity="center|right"
            android:layout_weight="1"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/right_arrows"/>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fragment_sale_and_seckill_discounts_full_cut"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.blankj.utilcode.customwidget.Layout.LayoutRefresh.RefreshLoadMoreLayout
            android:id="@+id/refresh_fragment_sale_and_seckill_discounts_full_cut"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <ScrollView
               android:id="@+id/scollview_fragment_sale_and_seckill_discounts_full_cut"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <com.blankj.utilcode.customwidget.ListView.InnerListview
                       android:id="@+id/listview_fragment_sale_and_seckill_discounts_full_cut"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                   </com.blankj.utilcode.customwidget.ListView.InnerListview>
               </LinearLayout>
           </ScrollView>
        </com.blankj.utilcode.customwidget.Layout.LayoutRefresh.RefreshLoadMoreLayout>

        <ImageView

            android:id="@+id/top_fragment_sale_and_seckill_discounts_full_cut"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/line"
            android:scaleType="centerInside"
            android:src="@mipmap/logo_top"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>

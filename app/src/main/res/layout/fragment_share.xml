<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <com.blankj.utilcode.customwidget.ScollView.InCludeLandscapeScrollView
        android:id="@+id/scoll_fragment_share"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="1dp"
        android:fillViewport="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">


                <TextView
                    android:id="@+id/click_book_fragment_share"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="宝典"
                    android:textColor="@color/mainColor"/>


                <LinearLayout
                    android:id="@+id/click_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext4"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/logo_search"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="商品/商户/用户"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.blankj.utilcode.customwidget.Tab.tab.ScrollTab
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/top_tab_fragment_message"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"

                        android:orientation="vertical"
                        android:visibility="visible"
                        app:stab_avag="false"
                        app:stab_indicator_color="@color/mainColor"
                        app:stab_indicator_padding="25dp"
                        app:stab_indicator_radius="0.5dp"
                        app:stab_indicator_type="trend"
                        app:stab_indicator_weight="1dp"
                        app:stab_indicator_width="40dp"
                        app:stab_type="view_group"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/click_menu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <com.blankj.utilcode.customwidget.ViewPager.AutofitViewPager
                android:id="@+id/CustomCacheViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.blankj.utilcode.customwidget.ViewPager.AutofitViewPager>

        </LinearLayout>

    </com.blankj.utilcode.customwidget.ScollView.InCludeLandscapeScrollView>


</LinearLayout>

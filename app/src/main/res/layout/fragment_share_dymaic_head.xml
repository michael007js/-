<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.blankj.utilcode.customwidget.ViewPager.AnimationViewPager
            android:layout_width="match_parent"
            android:layout_height="150dp"></com.blankj.utilcode.customwidget.ViewPager.AnimationViewPager>

        <com.sss.car.custom.TAB
            android:background="#fff"
            android:id="@+id/tab_fragment_share_dymaic_head"
            android:layout_width="match_parent"
            android:layout_height="120dp"></com.sss.car.custom.TAB>
        
        <LinearLayout
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/logo_posted"/>
            <TextView
                android:id="@+id/posted_fragment_share_dymaic_head"
                android:textColor="@color/mainColor"
                android:text="立刻分享"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>

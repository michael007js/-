<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <com.blankj.utilcode.customwidget.Layout.LayoutRefresh.RefreshLoadMoreLayout
            android:id="@+id/refresh_fragment_wallet_cash_discount_full_cut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

           <com.blankj.utilcode.customwidget.ListView.InnerListview
               android:id="@+id/listview_fragment_wallet_cash_discount_full_cut"
               android:layout_width="match_parent"
               android:divider="@null"
               android:layout_height="match_parent">

           </com.blankj.utilcode.customwidget.ListView.InnerListview>
        </com.blankj.utilcode.customwidget.Layout.LayoutRefresh.RefreshLoadMoreLayout>

        <ImageView

            android:id="@+id/top_fragment_wallet_cash_discount_full_cut"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/line"
            android:scaleType="centerInside"
            android:src="@mipmap/logo_top"
            android:visibility="gone"/>


    </RelativeLayout>
</LinearLayout>

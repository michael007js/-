<?xml version="1.0" encoding="utf-8"?>
<com.blankj.utilcode.customwidget.Layout.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scoll_item_activity_collect_adapter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:ios="true"
    android:layout_marginTop="1dp"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <LinearLayout
        android:layout_marginTop="1dp"
        android:id="@+id/click_item_activity_collect_adapter"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pic_item_activity_collect_adapter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            fresco:actualImageScaleType="centerCrop"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_item_activity_collect_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"/>

            <TextView
                android:id="@+id/slogan_item_activity_collect_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mainColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_item_activity_collect_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/mainColor"/>

                <TextView
                    android:id="@+id/buy_item_activity_collect_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="立即预购"
                    android:textColor="@color/mainColor"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="1dp"
        android:id="@+id/delete_item_activity_collect_adapter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/mainColor"
        android:gravity="center"
        android:padding="10dp"
        android:text="删除"
        android:textColor="#fff"/>
</com.blankj.utilcode.customwidget.Layout.SwipeMenuLayout>


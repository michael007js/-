<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:id="@+id/click_item_dialog_coupons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/type_item_dialog_coupons"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/name_item_dialog_coupons"
                android:maxLines="1"
                android:singleLine="true"
                android:gravity="center_vertical|bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/date_item_dialog_coupons"
                android:maxLines="1"
                android:singleLine="true"
                android:gravity="center_vertical|top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <CheckBox
            android:enabled="false"
            android:id="@+id/cb_item_dialog_coupons"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:button="@drawable/bg_check_box"/>
    </LinearLayout>
</LinearLayout>

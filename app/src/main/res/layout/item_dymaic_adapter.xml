<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:background="#fff"
        android:id="@+id/click_item_dymaic_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="1dp"
                android:layout_height="5dp"
                android:background="#dfdfdf"/>

            <FrameLayout
                android:id="@+id/bg_item_dymaic_adapter"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/month_item_dymaic_adapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"/>

                    <TextView
                        android:id="@+id/day_item_dymaic_adapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"/>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dfdfdf"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:textColor="@color/black"
                android:id="@+id/nikename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLength="50"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/content_item_dymaic_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLength="50"/>

            <com.blankj.utilcode.customwidget.GridView.InnerGridView
                android:id="@+id/nine_view_item_dymaic_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:horizontalSpacing="3dp"
                android:numColumns="3"
                android:verticalSpacing="3dp">

            </com.blankj.utilcode.customwidget.GridView.InnerGridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!--<com.facebook.drawee.view.SimpleDraweeView-->
                    <!--xmlns:fresco="http://schemas.android.com/apk/res-auto"-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--fresco:placeholderImage="@mipmap/logo_time"-->
                    <!--fresco:actualImageScaleType="centerInside"/>-->

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/time_item_dymaic_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"/>

                <TextView

                    android:id="@+id/delete_item_dymaic_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="删除"
                    android:visibility="gone"
                    android:textColor="@color/mainColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/praise_item_dymaic_adapter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    fresco:placeholderImage="@mipmap/logo_praise_no"
                    fresco:actualImageScaleType="centerInside"/>

                <TextView
                    android:id="@+id/praise_number_item_dymaic_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_weight="0.18"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/comment_item_dymaic_adapter"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    fresco:placeholderImage="@mipmap/logo_comment"
                    fresco:actualImageScaleType="fitXY"/>
                <TextView
                    android:id="@+id/comment_number_item_dymaic_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_weight="0.2"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/share_item_dymaic_adapter"
                    android:layout_width="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="25dp"
                    fresco:placeholderImage="@mipmap/logo_dymaic_share"
                    fresco:actualImageScaleType="fitXY"/>
                <TextView
                    android:id="@+id/share_number_item_dymaic_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_weight="0.2"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="#dfdfdf"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:background="@color/line"
        android:id="@+id/click_item_dymaic_details_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
     <LinearLayout
         android:gravity="center_vertical"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

         <com.facebook.drawee.view.SimpleDraweeView
             xmlns:fresco="http://schemas.android.com/apk/res-auto"
             android:id="@+id/pic_item_dymaic_details_adapter"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_marginLeft="10dp"
             fresco:actualImageScaleType="centerCrop"/>
     </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/nikename_item_dymaic_details_adapter"
                   android:singleLine="true"
                   android:textColor="@color/black"
                   android:maxLines="1"

                   android:maxWidth="200dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:layout_weight="1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:id="@+id/time_item_dymaic_details_adapter"
                   android:singleLine="true"
                   android:maxLines="1"
                   android:textSize="12sp"
                   android:textColor="@color/black"
                   android:maxWidth="200dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <LinearLayout
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/reply_item_dymaic_details_adapter"
                   android:layout_width="wrap_content"
                   android:text="回复"
                   android:visibility="gone"
                   android:textColor="#868686"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/reply_nikename_item_dymaic_details_adapter"
                   android:layout_width="wrap_content"
                   android:singleLine="true"
                   android:maxLines="1"
                   android:visibility="gone"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:maxWidth="200dp"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:id="@+id/content_nikename_item_dymaic_details_adapter"
                   android:textColor="@color/black"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

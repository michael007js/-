<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/click_item_fragment_goods_service_details_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_item_fragment_goods_service_details_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.azhong.ratingbar.RatingBar
            android:id="@+id/star_item_fragment_goods_service_details_comment"
            xmlns:a_zhon="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            a_zhon:clickable="false"
            a_zhon:image_height="20dp"
            a_zhon:image_padding="3dp"
            a_zhon:image_width="20dp"
            a_zhon:star="0"
            a_zhon:star_count="5"
            a_zhon:star_img="@mipmap/logo_star_light"
            a_zhon:unstar_img="@mipmap/logo_star_dark" />

        <TextView
            android:id="@+id/content_item_fragment_goods_service_details_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_item_fragment_goods_service_details_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/shop_item_fragment_goods_service_details_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:maxLines="1"/>

        </LinearLayout>

        <com.blankj.utilcode.customwidget.ListView.HorizontalListView
            android:id="@+id/photo_item_fragment_goods_service_details_comment"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"></com.blankj.utilcode.customwidget.ListView.HorizontalListView>

    </LinearLayout>
</LinearLayout>

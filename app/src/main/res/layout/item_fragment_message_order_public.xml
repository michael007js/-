<?xml version="1.0" encoding="utf-8"?>
<com.blankj.utilcode.customwidget.Layout.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scoll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="1dp"
    app:ios="true"
    app:leftSwipe="true"
    app:swipeEnable="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date_item_item_fragment_message_order_public"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#bdbdbd"/>

        <LinearLayout
            android:id="@+id/click_item_item_fragment_message_order_public"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_button_small_white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_item_fragment_message_order_public"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:singleLine="true"/>

                    <!--<com.facebook.drawee.view.SimpleDraweeView-->
                        <!--xmlns:fresco="http://schemas.android.com/apk/res-auto"-->
                        <!--android:layout_width="20dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:layout_marginLeft="5dp"-->
                        <!--android:layout_marginRight="5dp"-->
                        <!--fresco:placeholderImage="@mipmap/logo_location"-->
                        <!--fresco:placeholderImageScaleType="fitCenter"/>-->

                    <!--<TextView-->
                        <!--android:id="@+id/distance_item_fragment_message_order_public"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:gravity="center_vertical"-->
                        <!--android:singleLine="true"-->
                        <!--android:textColor="@color/mainColor"/>-->

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/pic_item_fragment_message_order_public"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    fresco:actualImageScaleType="centerCrop"/>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/content_item_fragment_message_order_public"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看详情"
                        android:textColor="@color/text_grey"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/grayness"
        android:gravity="center"
        android:padding="10dp"
        android:text="置顶"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/mainColor"
        android:gravity="center"
        android:padding="10dp"
        android:text="删除"
        android:textColor="#fff"/>
</com.blankj.utilcode.customwidget.Layout.SwipeMenuLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:background="#fff"
        android:id="@+id/click_item_fragment_order_sos_seller_adapter"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/service_item_fragment_order_sos_seller_adapter"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="top"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="@color/mainColor"/>

            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pic_item_fragment_order_sos_seller_adapter"
                android:layout_width="55dp"
                android:layout_height="55dp"
                fresco:actualImageScaleType="centerCrop"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <TextView
                android:textColor="#000"
                android:id="@+id/adress_item_fragment_order_sos_seller_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/content_item_fragment_order_sos_seller_adapter"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
           <LinearLayout
               android:gravity="center_vertical"
               android:layout_marginTop="5dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:textColor="#000"
                   android:layout_weight="1"
                   android:id="@+id/date_item_fragment_order_sos_seller_adapter"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

               <com.facebook.drawee.view.SimpleDraweeView
                   android:layout_marginLeft="5dp"
                   xmlns:fresco="http://schemas.android.com/apk/res-auto"
                   android:id="@+id/qr_item_fragment_order_sos_seller_adapter"
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   fresco:actualImageScaleType="fitXY"
                   />

               <TextView
                   android:layout_marginLeft="5dp"
                   android:text="一键导航"
                   android:textSize="13sp"
                   android:id="@+id/nav_fragment_order_sos_seller_adapter"
                   android:textColor="@color/mainColor"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

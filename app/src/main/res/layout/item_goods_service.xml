<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/click_item_goods_service_list_adapter"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:padding="5dp">

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pic_item_goods_service_list_adapter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            fresco:actualImageScaleType="fitXY"/>

        <TextView
            android:id="@+id/title_item_goods_service_list_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/pic_item_goods_service_list_adapter"
            android:layout_toRightOf="@+id/pic_item_goods_service_list_adapter"
            android:maxLines="2"/>


        <TextView
            android:id="@+id/slogan_item_goods_service_list_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_item_goods_service_list_adapter"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:textSize="13.8sp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:layout_toEndOf="@+id/pic_item_goods_service_list_adapter"
            android:layout_toRightOf="@+id/pic_item_goods_service_list_adapter"/>


        <TextView
            android:id="@+id/price_item_goods_service_list_adapter"
            android:layout_width="200dp"
            android:textSize="13.8sp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/slogan_item_goods_service_list_adapter"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:textColor="@color/mainColor"/>

        <TextView
            android:id="@+id/distance_item_goods_service_list_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/price_item_goods_service_list_adapter"
            android:layout_toEndOf="@+id/price_item_goods_service_list_adapter"
            android:layout_toRightOf="@+id/price_item_goods_service_list_adapter"
            android:gravity="center|right"
            android:maxLines="1"
            android:textColor="@color/mainColor"
            android:textSize="13sp"/>


    </RelativeLayout>


</RelativeLayout>



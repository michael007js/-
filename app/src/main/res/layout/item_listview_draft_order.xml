<?xml version="1.0" encoding="utf-8"?>
<com.blankj.utilcode.customwidget.Layout.SwipeMenuLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scoll_item_listview_draft_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:ios="true"
    app:leftSwipe="true"
    app:swipeEnable="true">
    <LinearLayout
        android:id="@+id/click_item_listview_draft_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/line"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/content_item_listview_draft_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_item_listview_draft_order"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/mainColor"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/number_item_listview_draft_order"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/date_item_listview_draft_order"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:id="@+id/edit_item_listview_draft_order"
        android:background="@color/grayness"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="编辑"/>
    <TextView
        android:id="@+id/delete_item_listview_draft_order"
        android:background="@color/mainColor"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="删除"/>
</com.blankj.utilcode.customwidget.Layout.SwipeMenuLayout>

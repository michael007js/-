<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parent_item_listview_order_edit_adapter"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/line"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/content_item_listview_order_edit_adapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLines="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_item_listview_order_edit_adapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/mainColor"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/number_listview_order_edit_adapter_"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/subtract_item_listview_order_edit_adapter_"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/number_select_edit_subtract"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/edit_item_listview_order_edit_adapter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:maxLength="5"
                    android:inputType="number"
                    android:maxLines="1"
                    android:text="1"
                    android:textSize="13sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/add_item_listview_order_edit_adapter_"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/number_select_edit_add"
                    android:visibility="gone"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>

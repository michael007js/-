<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
<TextView
    android:layout_width="match_parent"
    android:layout_height="10dp"/>
    <LinearLayout
        android:id="@+id/parent_item_listview_order_service_goods_list_adapter"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/line"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/content_item_listview_order_service_goods_list_adapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLines="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/price_item_listview_order_service_goods_list_adapter"
                android:textColor="@color/mainColor"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

         <LinearLayout
             android:gravity="center_vertical"
             android:layout_width="120dp"
             android:layout_height="40dp"
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/subtract_item_listview_order_service_goods_list_adapter"
                 android:background="@drawable/number_select_edit_subtract"
                 android:layout_width="23dp"
                 android:layout_height="23dp"/>
             <EditText
                 android:id="@+id/edit_item_listview_order_service_goods_list_adapter"
                 android:gravity="center"
                 android:layout_weight="1"
                 android:inputType="number"
                 android:text="1"
                 android:textSize="13sp"
                 android:maxLines="1"
                 android:digits="0123456789"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"/>
             <TextView
                 android:id="@+id/add_item_listview_order_service_goods_list_adapter"
                 android:background="@drawable/number_select_edit_add"
                 android:layout_width="25dp"
                 android:layout_height="25dp"/>
         </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/click_item_sale_and_seckill_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pic_item_sale_and_seckill_adapter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            fresco:actualImageScaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_item_sale_and_seckill_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/slogan_item_sale_and_seckill_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mainColor"/>

            <FrameLayout
                android:id="@+id/progress_item_sale_and_seckill_adapter"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <SeekBar
                    android:id="@+id/seekbar_item_sale_and_seckill_adapter"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:progressDrawable="@drawable/bg_seekbar"
                    android:thumb="@null"/>

                <TextView
                    android:id="@+id/sell_item_sale_and_seckill_adapter"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="50dp"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_item_sale_and_seckill_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/mainColor"/>

                <TextView
                    android:id="@+id/get_item_sale_and_seckill_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/bg_button_small_ra"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="马上抢"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>

</LinearLayout>

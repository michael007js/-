<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/click_item_share_dymaic_publish_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="1dp"
                android:layout_height="5dp"
                android:background="#dfdfdf"/>

            <FrameLayout
                android:id="@+id/bg_item_share_dymaic_publish_adapter"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/month_item_share_dymaic_publish_adapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"/>

                    <TextView
                        android:id="@+id/day_item_share_dymaic_publish_adapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"/>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dfdfdf"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/content_item_share_dymaic_publish_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLength="50"/>
            <com.blankj.utilcode.customwidget.Layout.LayoutNineGrid.NineView
                android:layout_marginTop="5dp"
                android:id="@+id/nine_view_item_share_dymaic_publish_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.blankj.utilcode.customwidget.Layout.LayoutNineGrid.NineView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/time_item_share_dymaic_publish_adapter"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/delete_item_share_dymaic_publish_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="删除"
                    android:textColor="@color/mainColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/praise_item_share_dymaic_publish_adapter"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_launcher"/>

                <ImageView
                    android:id="@+id/comment_item_share_dymaic_publish_adapter"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher"/>

                <ImageView
                    android:id="@+id/share_item_share_dymaic_publish_adapter"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher"/>

            </LinearLayout>

            <com.blankj.utilcode.customwidget.ListView.HorizontalListView
                android:id="@+id/praise_list_item_share_dymaic_publish_adapter"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"></com.blankj.utilcode.customwidget.ListView.HorizontalListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="#dfdfdf"/>

            <ListView
                android:id="@+id/listview_item_share_dymaic_publish_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

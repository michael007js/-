<?xml version="1.0" encoding="utf-8"?>
<com.blankj.utilcode.customwidget.Layout.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scoll_item_wallet_cash_discount_full_cut"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center"
    app:ios="true"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/main_sdv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                fresco:placeholderImage="@mipmap/logo_bg_coupon"
                fresco:placeholderImageScaleType="fitXY"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/name_item_wallet_cash_discount_full_cut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|bottom"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/date_item_wallet_cash_discount_full_cut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|top"
                    android:textColor="@color/text_grey"/>
            </LinearLayout>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/details_item_wallet_cash_discount_full_cut"
            android:layout_width="90dp"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                fresco:placeholderImage="@mipmap/logo_bg_coupon_details"
                fresco:placeholderImageScaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/price_item_wallet_cash_discount_full_cut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="¥0"
                    android:textColor="#fff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="查看详情"
                    android:textColor="#fff"
                    android:textSize="13sp"/>

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

   <LinearLayout
       android:gravity="center_vertical"
       android:orientation="horizontal"
       android:layout_width="wrap_content"
       android:layout_height="match_parent">
       <TextView
           android:id="@+id/returns_item_wallet_cash_discount_full_cut"
           android:layout_width="55dp"
           android:layout_height="50dp"
           android:background="@color/text_grey"
           android:gravity="center"
           android:text="退款"
           android:textColor="#fff"/>

       <TextView
           android:id="@+id/send_item_wallet_cash_discount_full_cut"
           android:layout_width="55dp"
           android:layout_height="50dp"
           android:background="@color/mainColor"
           android:gravity="center"
           android:text="赠予"
           android:textColor="#fff"/>
   </LinearLayout>
</com.blankj.utilcode.customwidget.Layout.SwipeMenuLayout>
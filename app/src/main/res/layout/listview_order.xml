<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/click_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
android:visibility="gone"
                    android:id="@+id/cb_listview_order"
                    android:button="@drawable/bg_check_box"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/pic_listview_order"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    fresco:actualImageScaleType="centerInside"/>

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/name_listview_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text=""/>

                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    fresco:placeholderImage="@mipmap/right_arrows"
                    fresco:placeholderImageScaleType="centerInside"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/connect_buyer_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="联系买家"
                android:textColor="@color/mainColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/connect_seller_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="联系卖家"
                android:textColor="@color/mainColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/cancel_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="@color/mainColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/send_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="立即发货"
                android:textColor="@color/mainColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/complete_service_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="完成服务"
                android:textColor="@color/mainColor"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/navigation_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="一键导航"
                android:textColor="@color/mainColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/returns_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="退换货申请"
                android:textColor="@color/mainColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/comment_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="立即评价"
                android:textColor="@color/mainColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/logistics_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="查看物流"
                android:textColor="@color/mainColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/complete_data_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="完善资料"
                android:textColor="@color/mainColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/sure_order_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="确认收货"
                android:textColor="@color/mainColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/dispose_order_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="立即处理"
                android:textColor="@color/mainColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/delete_order_listview_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="删除订单"
                android:textColor="@color/mainColor"
                android:visibility="gone"/>
        </LinearLayout>

        <com.blankj.utilcode.customwidget.ListView.InnerListview
            android:id="@+id/list_listview_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:divider="@null">

        </com.blankj.utilcode.customwidget.ListView.InnerListview>

        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/order_code_listview_order"
                android:gravity="center_vertical|left"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/order_date_listview_order"
                android:gravity="center_vertical|right"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/click_listview_show_goods_service"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="#fff"
        android:divider="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">


        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/mainColor"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/title_listview_show_goods_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="10dp"/>

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/right_arrows"
            android:layout_width="20dp"

            android:layout_height="match_parent"
            fresco:placeholderImage="@mipmap/right_arrows"
            fresco:placeholderImageScaleType="centerInside"/>

    </LinearLayout>

    <com.blankj.utilcode.customwidget.ListView.InnerListview
        android:id="@+id/listview_listview_show_goods_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/grayness"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

    </com.blankj.utilcode.customwidget.ListView.InnerListview>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/more_listview_show_goods_service"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center"
        android:text="查看更多"/>
</LinearLayout>

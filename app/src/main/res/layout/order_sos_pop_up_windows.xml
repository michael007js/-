<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:id="@+id/order_sos_pop_up_windows"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_activity_red"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_activity_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"
                android:text="求助者:"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView7"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="40dp"
                android:text="信誉积分:"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/helper_order_sos_pop_up_windows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignBottom="@+id/textView7"
                android:layout_marginLeft="10dp"
                android:maxLength="8"
                android:singleLine="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/textView9"
                android:layout_toRightOf="@+id/textView9"
                android:text=""
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/score_order_sos_pop_up_windows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView9"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/textView9"
                android:layout_toRightOf="@+id/textView9"
                android:text=""
                android:textColor="@color/black"/>


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/simpleDraweeView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="93dp"
                android:layout_marginRight="93dp"
                android:layout_marginTop="25dp"
                fresco:placeholderImage="@mipmap/logo_location"
                fresco:placeholderImageScaleType="centerCrop"/>

            <TextView
                android:id="@+id/distance_order_sos_pop_up_windows"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/simpleDraweeView3"
                android:layout_alignStart="@+id/simpleDraweeView3"
                android:layout_alignTop="@+id/simpleDraweeView3"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:singleLine="true"
                android:text="获取中..."
                android:textColor="@color/mainColor"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:text="车型:"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/car_order_sos_pop_up_windows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:textColor="@color/black"/>
        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:text="求助类型:"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/type_order_sos_pop_up_windows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:textColor="@color/black"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:text="服务价格:"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"/>

            <com.blankj.utilcode.customwidget.EditText.NumberSelectEdit
                android:id="@+id/price_order_sos_pop_up_windows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">

            </com.blankj.utilcode.customwidget.EditText.NumberSelectEdit>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:text="违约金比例:"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/penal_sum_sos_pop_up_windows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:textColor="@color/black"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>

        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:text="倒计时:"
                android:textColor="@color/mainColor"/>

            <com.blankj.utilcode.customwidget.JingDongCountDownView.SecondDownTimerView
                android:id="@+id/count_down_sos_pop_up_windows"
                android:layout_marginTop="-2dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.blankj.utilcode.customwidget.JingDongCountDownView.SecondDownTimerView>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="-23dp"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:background="@color/mainColor"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/click_cancel_order_sos_pop_up_windows"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="放弃"
            android:textColor="#fff"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#fff"
            android:gravity="center"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/click_get_order_sos_pop_up_windows"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="抢单"
            android:textColor="#fff"/>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/wallet_recharge"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/top_main"/>

    <LinearLayout
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:layout_width="40dp"
            android:id="@+id/logo"
            android:layout_height="40dp"
            fresco:placeholderImage="@mipmap/logo_bank"
            fresco:placeholderImageScaleType="fitXY"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="绑定银行卡"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:text="金额    "/>

        <EditText
            android:id="@+id/input_wallet_recharge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="0123456789"
            android:gravity="center|left"
            android:hint="请输入充值金额"
            android:textColor="@color/black"
            android:inputType="number"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/next_wallet_recharge"
        android:gravity="center"
        android:background="@drawable/bg_button_small_ra1"
        android:text="下一步"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
</LinearLayout>

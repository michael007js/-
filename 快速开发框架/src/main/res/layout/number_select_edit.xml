<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/subtract_item_listview_order_service_goods_list_adapter"
            android:background="@drawable/number_select_edit_subtract"
            android:layout_width="23dp"
            android:layout_height="23dp"/>
        <EditText
            android:id="@+id/edit_item_listview_order_service_goods_list_adapter"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:text="1"
            android:textSize="13sp"
            android:maxLines="1"
            android:digits="0123456789"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/add_item_listview_order_service_goods_list_adapter"
            android:background="@drawable/number_select_edit_add"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </LinearLayout>
</LinearLayout>
